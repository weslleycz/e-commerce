// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id       String    @id @default(uuid())
    email    String    @unique
    password String
    name     String
    cpf      String    @unique
    cards    Card[]
    Order    Order[]
    address  Address[]

    @@map("Users")
}

model Card {
    id             String   @id @default(uuid())
    account_holder String
    number         String   @unique
    cvv            String
    validity       DateTime
    User           User?    @relation(fields: [userId], references: [id])
    userId         String?
    Order          Order[]

    @@map("Cards")
}

model ADM {
    id       String @id @default(uuid())
    name     String
    cnpj     String @unique
    email    String @unique
    password String

    @@map("ADMs")
}

model Product {
    id          String  @id @default(uuid())
    name        String
    price       BigInt
    description String
    img         String
    Order       Order?  @relation(fields: [orderId], references: [id])
    orderId     String?

    @@map("Products")
}

model Order {
    id        String    @id @default(uuid())
    products  Product[]
    user      User      @relation(fields: [userId], references: [id])
    card      Card      @relation(fields: [cardId], references: [id])
    total     BigInt
    userId    String
    cardId    String
    address   Address   @relation(fields: [addressId], references: [id])
    addressId String
}

model Address {
    id     String  @id @default(uuid())
    cep    String
    city   String
    number Int
    street String
    User   User?   @relation(fields: [userId], references: [id])
    userId String?
    Order  Order[]
}
